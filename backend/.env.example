# Hearst Mining Architect - Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3006
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Electricity Rates (USD per kWh) - Default values
DEFAULT_ELECTRICITY_RATE=0.05
QATAR_ELECTRICITY_RATE=0.03

# Bitcoin Network API (optional - for live difficulty data)
BITCOIN_API_URL=https://blockchain.info

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3106,http://localhost:3000

# AI APIs - Implantation (at least one required for AI features)
# Claude 4.5 - RECOMMENDED for complex 3D layouts (best spatial reasoning)
ANTHROPIC_API_KEY=sk-ant-...

# GPT-4.1 - Good for medium complexity layouts
OPENAI_API_KEY=sk-...

# Gemini Flash - Fast generation for simpler layouts
GEMINI_API_KEY=AIza...
